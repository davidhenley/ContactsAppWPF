<UserControl x:Class="ContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactsApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="800">
    <Grid Background="#aae5e5e5">
        <StackPanel Margin="5">
            <TextBlock x:Name="nameTextBlock" Text="FirstName LastName" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="emailTextBlock" Text="email@example.com" FontSize="15" Foreground="DodgerBlue"/>
            <TextBlock x:Name="phoneTextBlock" Text="(123) 456-7890" FontSize="15" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
